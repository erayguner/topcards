---
# Bandit configuration for TopCards
# See https://bandit.readthedocs.io/en/latest/config.html
recursive: true
aggregate: type
context_lines: 3
exclude_dirs:
  - tests
  - test
  - __pycache__
  - .git
  - .tox
  - .pytest_cache
  - venv
  - env
  - node_modules
  - dist
  - build
  - .claude
  - .swarm
  - memory
skips:
  - B101  # assert_used - allowed in tests
  - B601  # paramiko_calls - allowed for legitimate usage
